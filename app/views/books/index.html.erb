<body>
  <h1>Books</h1>

    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
       <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <a class="show" href="show">Show</a>
        </td>
        <td>
          <a class="edit" href="edit">Edit</a>
        </td>
        <td>
          <a class="destroy" href="edit">Destroy</a>
        </td>
        <% end %>
      </tr>
    </tbody>

</body>