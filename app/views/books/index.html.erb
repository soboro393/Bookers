<body>
  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
       <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <a class="show" href="show">Show</a>
          </td>
          <td>
            <a class="edit" href="edit">Edit</a>
          </td>
          <td>
            <a class="destroy" href="edit">Destroy</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New book</h2>
  <div>
    <%= form_with model: @book, local: true do |f| %>
      <div class="field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </div>
</body>